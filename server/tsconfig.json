{
  "compilerOptions": {
    "declaration": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "target": "es6",
    "types": ["node"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
